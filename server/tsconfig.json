{
  "compilerOptions": {
    "outDir": "../public",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES5",
    "watch": true
  },
  "exclude": [
    "node_modules"
  ]
}
